<script>
document.addEventListener("DOMContentLoaded", () => {
  const gridTop = document.querySelector("#{{ section.id }} .os-cp-grid-top");
  const stickyClass = "sticky-active";

  function toggleStickyClass() {
    const isSticky = window.scrollY >= gridTop.offsetTop - 59;
    gridTop.classList.toggle(stickyClass, isSticky);
  }

  function checkBreakpoint() {
    if (window.innerWidth <= {{ settings.breakpoint3 }}) {
      window.addEventListener("scroll", toggleStickyClass);
    } else {
      window.removeEventListener("scroll", toggleStickyClass);
      gridTop.classList.remove(stickyClass);
    }
  }

  checkBreakpoint();
  window.addEventListener("resize", checkBreakpoint);
});

</script>

