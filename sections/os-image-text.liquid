<style>
   .img-txt_container {
        display: none;
   }
  
   .img-txt_container-mobile {
         margin: 0 10px;
         margin-bottom: 1.9rem;
   }

     .equal-container-imgtxt {
        flex: 1;
     }
  
    .text-img-button-wrapper {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      margin-left: 2rem;
    }

  .img-txt_container-info h2 {
        font-size: 2.8rem; 
   }

  .img-txt_container-info p, .text-img-button {
        font-size: 1.3rem; 
   }
  
   @media only screen and (min-width: 800px) {

     .img-txt_container-mobile {
         display: none;
   }
  
   .img-txt_container {
        display: revert;
        display: flex;
        justify-content: center;
        margin: 0 auto;
   }

  .img-txt_container2 {
      display: flex;
  }
     
  {% if section.settings.image_order %}
     #{{section.id}} {
        order: 1;
   }
  {% endif %}
   
   .image-text-container {
     display: flex;
     flex-direction: column;
     align-items: center;
     justify-content: center;
   }

  .img-txt_container {
    margin: 2.5rem 4rem;
  }
 }
</style>

<div class="img-txt_container">
   <div class="img-txt_container2">
      <div id="{{ section.id }}"  class="image-text-container equal-container-imgtxt">  
         <div class="img-txt_container-info" style="padding: 2rem 1.6rem; width: 100%;">
            <h2 style="text-align: center; font-family: 'Neue Haas Display Medium'; margin-left: 2rem; border-top:0; border-bottom:0;">{{ section.settings.heading }}</h2>
            <p style="margin-left: 2rem; text-align: center;">{{ section.settings.paragraph }}</p>
            <div class="text-img-button-wrapper">
               <a class="text-img-button" href="{{ section.settings.cta_url }}" target="__blank" style="color:black; max-width: fit-content; text-decoration: none;"><u>{{ section.settings.cta_para }}</u></a>
               <span class="button-underline"></span>
            </div>
         </div>
      </div>
      <div id="image-adjust-imgtxt" class="image-text-img equal-container-imgtxt">
         {% if section.settings.map_url %}
            <iframe src="{{ section.settings.map_url }}" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
         {% else %}
            <img src="{{ section.settings.image | img_url: 'master' }}" width="100%"> 
         {% endif %}
      </div>
   </div>
</div>

<div class="img-txt_container-mobile">
   <div class="img-txt_container2">
      <div id="{{ section.id }}" class="image-text-container">  
         <div class="image-text-img">
            {% if section.settings.map_url %}
               <iframe src="{{ section.settings.map_url }}" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            {% else %}
               <img id="text-image-img" src="{{ section.settings.image | img_url: 'master' }}" width="100%"> 
            {% endif %}
         </div>
         <div style="padding: 2rem 1.6rem;">
            <h2 style="border-top:0; font-family: 'Neue Haas Display Medium'; border-bottom:0;">{{ section.settings.heading }}</h2>
            <p>{{ section.settings.paragraph }}</p>
            <a href="{{ section.settings.cta_url }}" target="__blank" style="color:black; max-width: fit-content; text-decoration: none;"><u>{{ section.settings.cta_para }}</u></a>
         </div>
      </div>
   </div>
</div>

{% schema %}
{
  "name": "Text-Image",
  "settings": [
     {
      "type": "image_picker",
      "id": "image",
      "label": "Fallback Image"
    },
    {
      "type": "url",
      "id": "map_url",
      "label": "Google Map Embed URL",
    },
    {
      "type": "checkbox",
      "id": "image_order",
      "label": "Swap Image and Text Order",
      "default": false
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "heading here"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "text here"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Store Location Url"
    },
    {
      "type": "text",
      "id": "cta_para",
      "label": "Label",
      "default": "text here"
    }
  ],
  "presets": [{
    "name": "Text-Image",
    "category": "custom"
  }]
}
{% endschema %}
