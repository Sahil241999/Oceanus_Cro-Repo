{{ 'customer.css' | asset_url | stylesheet_tag }}

{% style %}
#{{ section.id }} {
  padding-top: {{ section.settings.padding_top }}rem;
  padding-bottom: {{ section.settings.padding_bottom }}rem;
}

#{{ section.id }} .os-ml-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-gap: 2rem;
}

#{{ section.id }} .os-ml-grid-left {
  display: flex;
  justify-content: center;
  align-items: center;
}

#{{ section.id }} .os-ml-wrapper {
  width: 100%;
}

#{{ section.id }} .section-{{ section.id }}-padding {
  max-width: none !important;
  padding-left: 0rem;
  padding-right: 0rem;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

#{{ section.id }} .os-ml-login-div {
  width: 100%;
}

#{{ section.id }} .os-ml-login-div > form,
#{{ section.id }} .os-ml-forgot-form {
  display: flex;
  flex-direction: column;
  margin-top: 3rem;
  width: 100%;
}

#{{ section.id }} button,
#{{ section.id }} a,
#{{ section.id }} label,
#{{ section.id }} input {
  font-size: initial;
}

#{{ section.id }} .field {
  margin-top: 0rem;
}

#{{ section.id }} .field > input {
  border: 1px solid rgba(0,0,0,0.1);
  padding: 1.5rem !important;
}

#{{ section.id }} .field > input:focus {
  border-color: rgba(0,0,0,1);
  padding: 1.5rem !important;
}

#{{ section.id }} .os-ml-label {
  text-align: left;
  margin-bottom: 0.5rem;
}

#{{ section.id }} .os-ml-password-label {
  margin-top: 2rem;
}

#{{ section.id }} .os-ml-login-button {
  width: 100%;
}

@media (max-width: {{ settings.breakpoint3 }}px) {
  #{{ section.id }} .os-ml-grid {
    grid-template-columns: 1fr;
  }
}
{% endstyle %}


<section id="{{ section.id }}">
  <div class="page-width">
    <div class="os-ml-grid">
      <div class="os-ml-grid-left">
        <img width="auto" height="auto" src="{{ section.settings.image | image_url: width: 700 }}">
      </div>
      <div class="customer login section-{{ section.id }}-padding">
        <h1 id="recover" tabindex="-1">
          {{ 'customer.recover_password.title' | t }}
        </h1>
        <div class="os-ml-wrapper">
          <p>
            {{ 'customer.recover_password.subtext' | t }}
          </p>

          {%- form 'recover_customer_password', class: 'os-ml-forgot-form' -%}
            {% assign recover_success = form.posted_successfully? %}
            <label for="RecoverEmail" class="os-ml-label">
              {{ 'customer.login_page.email' | t }}
            </label>
            <div class="field">
              <input
                type="email"
                value=""
                name="email"
                id="RecoverEmail"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                {% if form.errors %}
                  aria-invalid="true"
                  aria-describedby="RecoverEmail-email-error"
                  autofocus
                {% endif %}
                placeholder="{{ 'customer.login_page.email' | t }}"
              >
              {% comment %}<label for="RecoverEmail">
                {{ 'customer.login_page.email' | t }}
              </label>{% endcomment %}
            </div>
            {%- if form.errors -%}
              <small id="RecoverEmail-email-error" class="form__message">
                <svg aria-hidden="true" focusable="false" viewBox="0 0 13 13">
                  <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                  <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                  <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                  <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                </svg>
                {{ form.errors.messages.form }}
              </small>
            {%- endif -%}

            <button class="os-button os-ml-login-button">
              {{ 'customer.login_page.submit' | t }}<span>{% render 'icon-caret' %}</span>
            </button>

            <a href="#login">
              {{ 'customer.login_page.cancel' | t }}
            </a>
          {%- endform -%}
        </div>

        <h1 id="login" tabindex="-1">
          {{ 'customer.login_page.title' | t }}
        </h1>
        <div class="os-ml-login-div">
          {%- if recover_success == true -%}
            <h3 class="form__message" tabindex="-1" autofocus>
              <svg aria-hidden="true" focusable="false" viewBox="0 0 13 13">
                <path d="M6.5 12.35C9.73087 12.35 12.35 9.73086 12.35 6.5C12.35 3.26913 9.73087 0.65 6.5 0.65C3.26913 0.65 0.65 3.26913 0.65 6.5C0.65 9.73086 3.26913 12.35 6.5 12.35Z" fill="#428445" stroke="white" stroke-width="0.7"/>
                <path d="M5.53271 8.66357L9.25213 4.68197" stroke="white"/>
                <path d="M4.10645 6.7688L6.13766 8.62553" stroke="white">
              </svg>
              {{ 'customer.recover_password.success' | t }}
            </h3>
          {%- endif -%}
          {%- form 'customer_login', novalidate: 'novalidate' -%}
            {%- if form.errors -%}
              <h2 class="form__message" tabindex="-1" autofocus>
                <span class="visually-hidden">{{ 'accessibility.error' | t }} </span>
                <svg aria-hidden="true" focusable="false" viewBox="0 0 13 13">
                  <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                  <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                  <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                  <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                </svg>
                {{ 'templates.contact.form.error_heading' | t }}
              </h2>
              {{ form.errors | default_errors }}
            {%- endif -%}

            <label for="CustomerEmail" class="os-ml-label">
              {{ 'customer.login_page.email' | t }}
            </label>
            <div class="field">
              <input
                type="email"
                name="customer[email]"
                id="CustomerEmail"
                autocomplete="email"
                autocorrect="off"
                autocapitalize="off"
                {% if form.errors contains 'form' %}
                  aria-invalid="true"
                {% endif %}
                placeholder="{{ 'customer.login_page.email' | t }}"
              >
              {% comment %}<label for="CustomerEmail">
                {{ 'customer.login_page.email' | t }}
              </label>{% endcomment %}
            </div>

            {%- if form.password_needed -%}
              <label for="CustomerPassword" class="os-ml-label  os-ml-password-label">
                {{ 'customer.login_page.password' | t }}
              </label>
              <div class="field">
                <input
                  type="password"
                  value=""
                  name="customer[password]"
                  id="CustomerPassword"
                  autocomplete="current-password"
                  {% if form.errors contains 'form' %}
                    aria-invalid="true"
                  {% endif %}
                  placeholder="{{ 'customer.login_page.password' | t }}"
                >
                {% comment %}<label for="CustomerPassword">
                  {{ 'customer.login_page.password' | t }}
                </label>{% endcomment %}
              </div>

              <a href="#recover">
                {{ 'customer.login_page.forgot_password' | t }}
              </a>
            {%- endif -%}

            <button class="os-button os-ml-login-button">
              {{ 'customer.login_page.sign_in' | t }}<span>{% render 'icon-caret' %}</span>
            </button>

            <a href="{{ routes.account_register_url }}">
              {{ 'customer.login_page.create_account' | t }}
            </a>
          {%- endform -%}
        </div>

        {%- if shop.checkout.guest_login -%}
          <div>
            <hr>
            <h2>{{ 'customer.login_page.guest_title' | t }}</h2>

            {%- form 'guest_login' -%}
              <button>
                {{ 'customer.login_page.guest_continue' | t }}
              </button>
            {%- endform -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "OS Customer Login Page",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 15,
      "step": 1,
      "default": 2,
      "unit": "rem"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 15,
      "step": 1,
      "default": 2,
      "unit": "rem"
    }
  ]
}
{% endschema %}
